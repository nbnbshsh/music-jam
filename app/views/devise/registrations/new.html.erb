<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <%if @sns_id.present? %>
   <%= hidden_field_tag :sns_auth, true %>
 <% else %>
   <div class="field">
     <%= f.label :password %>
     <% @minimum_password_length %>
     <em>(<%= @minimum_password_length %> characters minimum)</em>
     <br />
     <%= f.password_field :password, autocomplete: "new-password" %>
   </div>

   <div class="field">
     <%= f.label :password_confirmation %><br />
     <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
   </div>
 <% end %>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_area :nickname,autocomplete: "nickname" %>
  </div>

  <div class="field">
    <%= f.label :instrument %><br />
    <%= f.text_area :instrument, autocomplete: "instrument" %>
  </div>
  
  <div class="field">
    <%= f.label :prefecture_id %><br />
    <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"user-prefecture"}) %>
  </div>

  <div class="field">
    <%= f.label :history_id %><br />
    <%= f.collection_select(:history_id, History.all, :id, :name, {}, {class:"select-box", id:"user-history"}) %>
  </div>

  <div class="field">
    <%= f.label :gender_id %><br />
    <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"select-box", id:"user-gender"}) %>
  </div>
  
  <div class="field">
    <%= f.label :age %><br />
    <%= f.text_area :age, autocomplete: "age" %>
  </div>

  <div class="field">
    <%= f.label :genre %><br />
    <%= f.text_area :genre, autocomplete: "genre" %>
  </div>

  <div class="field">
    <%= f.label :artist %><br />
    <%= f.text_area :artist, autocomplete: "artist" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up",class:"button is-primary" %>
  </div>
<% end %>
 <div class="google-signup">
  <%= link_to "Googleで登録", user_google_oauth2_omniauth_authorize_path, method: :post,class:"button"%>
</div>
<%= render "devise/shared/links" %>

 <div class="tabs">
  <% if user_signed_in?%>
  
    <ul>
      <li><a class="button m-1" href="/movies/new">
        <span class="movies-btn_text">投稿</span></a></li>
        
      <li><a class="button m-1" href="/movies/likes/show">
        <span class="mlikes-btn_text">いいね一覧</span></a></li>
        
      <li><a class="button m-1" href="/users/<%=current_user.id%>/chats">
        <span class="mlikes-btn_text">DM</span></a></li>
    </ul>
  
  <% else%>
  <p class="sign_in_info">投稿.DM送信をするにはユーザーアカウントを作成及びサインインしましょう</p>
  <% end %>
  
  <div class="search-btn-class">
   <%= search_form_for @m, url: search_movies_path  do |f| %>
      <%= f.label :instrument_eq, '楽器名',class:"intrument_label"%>
      <%= f.collection_select :instrument_eq, @movies, :instrument,:instrument, include_blank: '指定なし'%>
      <%=f.submit '検索',class:"button is-primary" %>
    <% end %>
  </div>

  </div>

